#!/home/mayd/rakudo/install/bin/raku

say "pre-commit actions";

say \"trunning prove6 on t/...";
run "prove6", "-Ilib", "t/";

say "\trunning \"embed-documentation.raku\"...";
run "raku", "tools/embed-documentation.raku", "-v";

say "\tstaging README.org...";
run "git", "add", "README.org";

say "precommit done";
